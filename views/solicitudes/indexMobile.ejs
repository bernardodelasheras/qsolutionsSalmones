<%- include('../partials/headerMobile.ejs') %>

<script src="/stylesheets/grillasimpleMobile.js"></script>

<div class="container">
    <header class="jumbotron" style="padding: 15px;">
        <div class="container">
            <h3 style="margin-top: 0px;">Solicitudes</h3>
            <a class="btn btn-primary btn-large" href="/solicitudes/new">Nueva Solicitud</a>
        </div>
    </header>
</div>


<div class="container">
    <div class="row" style="display:flex; flex-wrap:wrap;">
        <table id="grillasimpleMobile" class="table table-bordered table-responsive-sm" style="font-size: small;">
            <thead>
                <tr>
                    <th>Nro.</th>
                    <th>Fecha</th>
                    <th>Reempl.<br>Estado</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% data.forEach(function(e){ %>

                    <tr>
                        <td style="text-align: center;">
                            <%= e.idSolicitud %>
                        </td>
                        <td>
                            <%= e.fecha %>
                        </td>
                        <td>
                            <%= e.Reemplazante %>
                            <br>
                            <strong><%= e.estado %></strong>
                        </td>
                        <% if (e.estado=='Ingresado') { %>
                            <td><a href="/solicitudes/<%= e.idSolicitud %>/confirmar" disabled="true" style="pointer-events: none;" class="btn btn-sm btn-primary" >Confirma</a></td>
                        <% } else { %>
                            <% if (e.estado=='Aprobado Operaciones') { %>    
                                <td><a href="/solicitudes/<%= e.idSolicitud %>/confirmar" class="btn btn-sm btn-primary" >Confirma</a></td>
                            <% } else { %>    
                                <td><a href="/solicitudes/<%= e.idSolicitud %>/confirmar" class="btn btn-sm btn-primary" disabled="true" style="pointer-events: none;">Confirma</a></td>
                            <% } %>   
                        <% } %>
                        

                    </tr>

                <% }) %>
            </tbody>
        </table>
    </div>
</div>



<%- include('../partials/footer.ejs') %>