<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="form-group">
            <h1 style="text-align: center; padding-top: 60px; padding-bottom: 15px">Log In Form</h1>
        </div>
        <div style="width: 33%; margin: 25px auto;">
            <form action="/confirmapassword" method="POST">

                <div class="form-group" style="display: none;">
                    <input class="form-control" id="nombre" type="text" placeholder="nombre" name="data[nombre]"
                        value="<%= data.nombre %>">
                </div>

                <div class="form-group" style="display: none;" >
                    <input class="form-control" id="username" type="text" placeholder="Username" name="data[username]"
                        value="<%= data.username %>">
                </div>

                <div class="form-group" style="display: none;" >
                    <input class="form-control" id="email" type="text" placeholder="EMail" name="data[email]"
                        value="<%= data.email %>">
                </div>

                <div class="form-group" style="display: none;" >
                    <input class="form-control" id="password" type="password" placeholder="Contraseña"
                        name="[newpass]" value="<%= newpass %>" >
                </div>

                <div class="form-group">
                    <label for="codigo">Código de Seguridad</label>
                    <input class="form-control" id="codigo" type="text" placeholder="Código Seguridad" name="[codigo]"
                        value="<%= codigo %>">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Log In</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>