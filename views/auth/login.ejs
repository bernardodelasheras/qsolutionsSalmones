<div class="container">
    <div class="row">
        <div class="form-group"><h3 style="text-align: center; padding-top: 60px; padding-bottom: 15px"></h3></div>
        <div style="width: 33%; margin: 25px auto;">
            <form action="/login" method="POST">
                <div class="subform">
                <div class="form-group">
                    <input class="form-control" id="usuario" type="text" placeholder="Usuario"
                    name="data[username]">
                </div>
                <div class="form-group">
                    <input class="form-control" id="password" type="password" placeholder="Contraseña"
                    name="data[password]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Iniciar Sesión</button>
                </div>
                </div>
            </form>
        </div>
    </div>    
</div>

