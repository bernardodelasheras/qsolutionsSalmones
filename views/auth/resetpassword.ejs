<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="form-group"><h1 style="text-align: center; padding-top: 60px; padding-bottom: 15px">Log In Form</h1></div>
        <div style="width: 33%; margin: 25px auto;">
            <form action="/resetpassword" method="POST">

                <div class="form-group">
                    <input class="form-control" id="email" type="text" placeholder="EMail"
                    name="data[email]" value="<%= data.email %>">
                </div>

                <div class="form-group">
                    <input class="form-control" id="password" type="password" placeholder="Contraseña"
                    name="data[password]" value="<%= data.password %>">
                </div>

                <div class="form-group">
                    <input class="form-control" id="password2" type="password" placeholder="Contraseña (confirme reptiéndola)"
                    name="data[password2]" value="<%= data.password2 %>">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Log In</button>
                </div>
            </form>
        </div>
    </div>    
</div>

<%- include('../partials/footer.ejs') %>