<%- include('partials/headerMobile.ejs') %>

    <% if (!usuarioActual) { %>

    <div class="container">
        <div class="row" style="text-align: center;margin: 10px;">
            <div class="col-md-12" style="height: 150px;margin: 10px;text-align: center;">
                <a href="/login" class="btn btn-lg btn-primary btn-block btn-outline btn-wrap-text" >
                    Log In
                </a>
            </div>
        </div>
    </div>

    <% } else { %>

    <div class="container">
        <div class="row" style="text-align: center;margin: 10px;">
            <div class="col-md-12" style="height: 150px;margin: 10px;text-align: center;">
                <a href="/logout" class="btn btn-lg btn-primary btn-block btn-outline btn-wrap-text" >
                    Log Out
                </a>
            </div>
        </div>
    </div>

    <% } %>


    <div class="container" style="padding-top: 25%;">
        <div class="row">
            <div class="col-lg-12">
                <div class="content">
                    <% if (!usuarioActual) { %>
                    <h4 style="text-align: center;">QSolutions </h4>
                    <% } else { %>
                    <h4 style="text-align: center;">QSolutions - (usuario: <%= usuarioActual.username %>) </h4>
                    <% } %>
                    <hr style="border-top: 1px solid rgb(12, 12, 12)">

                </div>
            </div>
        </div>

    </div>


    <%- include('partials/footer.ejs') %>