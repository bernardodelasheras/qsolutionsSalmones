<%- include('../partials/headerMobile.ejs') %>

<div style="text-align: center;"><h3>Elimina Solicitud Nro. <%= idSolicitud %></h3></div>

<div class="titulo">
    <div class="ui main text container ">

        
        <form class="ui form" action="/solicitudes/<%= data.idSolicitud %>?_method=DELETE" method="POST">
            <div class="subform">

                <div class="form-group" style="padding-right: 5px;">
                    <label for="Fecha">Fecha</label>
                    <input class="form-control" id="fecha" type="date" name="data[fecha]" 
                        value="<%= data.fecha %>" readonly disabled="true" >
                </div>

                <div class="form-group" style="padding-right: 5px;">
                    <label for="solicitante">Solicitante</label>
                    <input class="form-control" id="solicitante" type="text" name="[solicitante]" 
                        value="<%= solicitante %>" readonly disabled="true" >
                </div>


                <div class="form-group" style="padding-right: 5px;">
                    <label for="idMotivo">Motivo</label>
                    <select class="form-control" id=idMotivo name="data[idMotivo]" readonly disabled="true">
                        <% motivos.forEach(function(e){ %>
                            <% if (e.idMotivo==data.idMotivo) { %>
                                <option value="<%= e.idMotivo %>" selected>
                                    <%= e.glosa%>
                                </option>
                            <% } else { %>
                                <option value="<%= e.idMotivo %>">
                                    <%= e.glosa%>
                                </option>
                            <% } %>    
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="estado">Estado</label>
                    <select class="form-control" id=estado name="data[estado]" readonly disabled="true" >
                        <% estados.forEach(function(e){ %>
                            <option value="<%= e.codigo %>">
                                <%= e.descripcion%>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group" style="padding-right: 5px;">
                    <input class="form-control" id="idUsuarioSolicitante" type="text" name="data[idUsuarioSolicitante]" 
                        value="<%= data.idUsuarioSolicitante %>"  style="visibility: hidden; width: 3px;">
                </div>

                <div class="form-group">
                    <label for="fechaReemplazo">Fecha a Realizar Reemplazo</label>
                    <input class="form-control" id="fechaReemplazo" type="date" name="data[fechaReemplazo]" 
                        value="<%= data.fechaReemplazo %>"  readonly disabled="true">
                </div>


                <div class="form-group" style="padding-right: 5px;">
                    <label for="idCargoReemplazante">Cargo Reemplazante</label>
                    <select class="form-control" id=idCargoReemplazante name="data[idCargoReemplazante]" onchange="CargoReemplazanteChange();" readonly disabled="true">
                        <% cargos.forEach(function(e){ %>
                            <% if (e.idCargo==data.idCargoReemplazante) { %>
                                <option value="<%= e.idCargo %>" selected>
                                    <%= e.nombre%>
                                </option>
                            <% } else { %>
                                <option value="<%= e.idCargo %>">
                                    <%= e.nombre%>
                                </option>
                            <% } %>    
                        <% }) %>
                    </select>
                </div>

                <div class="form-group" style="padding-right: 5px;">
                    <label for="idBukReemplazante">Reemplazante</label>
                    <select class="form-control" id=idBukReemplazante name="data[idBukReemplazante]" onchange="ReemplazanteChange();" readonly disabled="true">
                        <% reemplazantes.forEach(function(e){ %>
                            <% if (e.idBuk==data.idBukReemplazante) { %>
                                <option value="<%= e.idBuk %>" selected>
                                    <%= e.nombre%>
                                </option>
                            <% } else { %>
                                <option value="<%= e.idBuk %>">
                                    <%= e.nombre%>
                                </option>
                            <% } %>    
                        <% }) %>
                    </select>
                </div>


                <div class="form-group" style="padding-right: 5px;">
                    <label for="idArea">Centro de Costos</label>
                    <select class="form-control" id=idArea name="data[idArea]" readonly disabled="true">
                        <% areas.forEach(function(e){ %>
                            <% if (e.idBuk==data.idArea) { %>
                                <option value="<%= e.idBuk %>" selected>
                                    <%= e.nombre%>
                                </option>
                            <% } else { %>
                                <option value="<%= e.idBuk %>">
                                    <%= e.nombre%>
                                </option>
                            <% } %>    
                        <% }) %>
                    </select>
                </div>

                <div class="form-group" >
                    <label for="valor">Valor a Pagar</label>
                    <input class="form-control" id="valor" type="number" name="data[valor]" 
                        value="<%= data.valor %>" readonly disabled="true" >
                </div>

                <div class="form-group" style="padding-right: 5px;">
                    <label for="idCargoReemplazado">Cargo Reemplazado</label>
                    <select class="form-control" id=idCargoReemplazado name="data[idCargoReemplazado]" onchange="CargoReemplazadoChange();" readonly disabled="true">
                        <% cargos.forEach(function(e){ %>
                            <% if (e.idCargo==data.idCargoReemplazado) { %>
                                <option value="<%= e.idCargo %>" selected>
                                    <%= e.nombre%>
                                </option>
                            <% } else { %>    
                                <option value="<%= e.idCargo %>">
                                    <%= e.nombre%>
                                </option>
                            <% } %>                                            
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="idBukReemplazado">Reemplazado</label>
                    <select class="form-control" id=idBukReemplazado name="data[idBukReemplazado]" readonly disabled="true">
                        <% reemplazados.forEach(function(e){ %>
                            <% if (e.idBuk==data.idBukReemplazado) { %>
                                <option value="<%= e.idBuk %>" selected>
                                    <%= e.nombre%>
                                </option>
                            <% } else { %>    
                                <option value="<%= e.idBuk %>">
                                    <%= e.nombre%>
                                </option>
                            <% } %>                                            
                        <% }) %>
                    </select>
                </div>


                <div class="form-group">
                    <label for="explicacion">Explicaci√≥n</label>
                    <textarea class="form-control" id="explicacion" type="textarea" name="data[explicacion]" 
                        value="<%= data.explicacion %>" rows="3" maxlength="512" readonly disabled="true"><%= data.explicacion %></textarea>
                </div>


                <input class="btn btn-primary btn-large" type="submit" value="Confirma Eliminar">
                <a class="btn btn-primary btn-large" href="/solicitudes/index">Cancela</a>

            </div>
        </form>    
        

    </div>
</div>

<style>
    form {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.26);
        border-radius: 5px;
        background: white;
        margin: 0.5rem;
    }

    .subform {
        /* width: 30rem; */
        max-width: 90%;
        margin: auto;
        padding-top: 15px;
        padding-bottom: 15px;
    }

</style>

<%- include('../partials/footer.ejs') %>
