<%- include('../partials/header.ejs') %>

<div class="titulo">
    <div class="ui main text container segment" style="padding-top: 30px; padding-bottom: 15px; width: 45%;">
        <div class="ui huge header">
            <h3>Programa Ejecución Robot DT
                <!-- <a class="btn btn-primary btn-large" style="margin-left: 50px;" href="/agenda/index">Volver</a> -->
            </h3>
        </div>
        <br>

        <form class="ui form" action="/agendaRPAdt/index" method="POST" id="formulario">

            <div class="form-group">
                <label for="dia">Día de la Semana</label>
                <select class="form-control" data-style="btn-info" id=dia name="data[dia]">
                    <% data.dias.forEach(function(e){ %>
                        <option value="<%= e.dia %>">
                            <%= e.glosa %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="hora">Hora de Ejecución</label>
                <br>
                <input class="rut-control" id="hora" type="number" name="data[hora]" placeholder="Hora 0 - 23"
                    value="<%= data.hora %>" min=0 max=24 style="width: 20%;">
                <input class="rut-control" id="minuto" type="number" name="data[minuto]" placeholder="Minuto 0 - 59"
                    value="<%= data.minuto %>" min=0 max=59 style="width: 20%;">
            </div>

            <input class="btn btn-primary" type="submit" id="ButtonProcesa" value="Procesar">

            <input class="btn btn-primary " type="submit" id="ButtonProcesaAhora" value="Procesar Ahora"
                formaction="/agendaRPAdt/indexAhora" method="POST">


        </form>

    </div>

</div>


<script>

    $(function () {
        $('#ButtonProcesa').click(function () {
            $('#formulario').append('<div class="loader" id="loader-7"></div>');
            $('#ButtonProcesa').hide();
        });
    });


</script>


