<%- include('../partials/header.ejs') %>

<div class="titulo">
    <div class="ui main text container segment" style="padding-top: 30px; padding-bottom: 15px">
        <div class="ui huge header">Nueva Aplicación</div>
        <form class="ui form" action="/aplicacionDias/aplicaciones" method="POST">


            <div class="form-group">
                <label for="ruta">Ruta</label>
                <input class="form-control" id="ruta" type="text" name="data[ruta]" placeholder="Ruta"
                    value="<%= data.ruta %>">
            </div>

            <div class="form-group">
                <label for="Día desde">Día Desde</label>
                <input class="form-control" id="desde" type="number" name="data[desde]" placeholder="Día Desde" 
                    value="<%= data.desde %>">
            </div>

            <div class="form-group">
                <label for="Día Hasta">Día Hasta</label>
                <input class="form-control" id="hasta" type="number" name="data[hasta]" placeholder="Día Hasta" 
                    value="<%= data.hasta %>">
            </div>


            <input class="ui primary button" type="submit" value="Guardar">

        </form>    


    </div>
</div>

