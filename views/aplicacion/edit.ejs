<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="row text-center"  style="display:flex; flex-wrap:wrap; padding-top: 30px; padding-bottom: 15px">
        <table style="width: 60%">
            <tr style="background-color: gainsboro">
                <th  style="text-align: center">
                    <h3>Articulo (Modifica)</h3>
                </th>
            </tr>    
        </table>        

    </div>
</div>


<div class="titulo">
    <div class="ui main text container ">

        <form class="ui form" action="/aplicacion/<%= data.idAplicacion %>?_method=PUT" method="POST">
            
            <div class="form-group">
                <label for="descripcion">Descripción</label>
                <input class="form-control" id="descripcion" type="text" name="data[descripcion]" placeholder="Descripción"
                    value="<%= data.descripcion %>">
            </div>

            <div class="form-group">
                <label for="ruta">EMail</label>
                <input class="form-control" id="ruta" type="ruta" name="data[ruta]" placeholder="Ruta"
                    value="<%= data.ruta %>">
            </div>

            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Guardar">
        </form>    


    </div>
</div>

<%- include('../partials/footer.ejs') %>
